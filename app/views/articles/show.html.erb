<h2 class="text-center mt-4">Title: <%= @article.title%></h2>
<h2 class="text-center mt-4">Content: <%= @article.content %></h2>
<h2 class="text-center mt-4">Admin: <%= @article.admin%></h2>

<h2>Add a Comment</h2>
<%= form_with(model: [ @article, Comment.new ], local: true) do |form| %>
    <%= form.label :content %><br/>
    <%= form.text_area :content %><br/>

    <%= form.submit %>
    <% end %>

    <h2>Comments</h2>
    <% @article.comments.each do |comment| %>
    <div>
        <p><%= comment.content %></p>
    </div>
<% end %>